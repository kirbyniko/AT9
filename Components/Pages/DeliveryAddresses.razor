@page "/delivery-addresses"

@attribute [Authorize]
<PageTitle>Delivery Addresses</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Delivery Addresses" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@deliveryAddresses" TItem="AT9.Models.AbstractTheatre.DeliveryAddress" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="DeliveryAddressId" Title="Delivery Address Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="ProfileId" Title="Profile Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="Fullname" Title="Full Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="Zipcode" Title="Zipcode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="Addresslineone" Title="Address Line One">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="Addresslinetwo" Title="Address Line Two">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Property="City" Title="City">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AT9.Models.AbstractTheatre.DeliveryAddress" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="deliveryAddress">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, deliveryAddress)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
