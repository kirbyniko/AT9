@page "/gallery-viewing"
@page "/gallery-viewing/{ID:int}"


@attribute [Authorize]

<PageTitle>Gallery Viewing</PageTitle>
<RadzenRow>
    <RadzenColumn Size="12">
        <div style="display: flex; align-items: center; justify-content: center; gap: 40px; padding: 40px; background: linear-gradient(135deg, #f2f2f2, #ffffff); border-radius: 20px; width: 100%; max-width: 1000px; height: 600px; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); transform: scale(1); transition: transform 0.3s ease-in-out;">

            <!-- Product Image Section with Stylish Frame -->
            <div style="flex-shrink: 0; position: relative; width: 300px; height: 500px; border-radius: 15px; overflow: hidden; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);">
                <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0)); z-index: 2;"></div>
                <img src="@Imgdata" alt="Gallery Image" style="height: 100%; width: 100%; object-fit: cover; border-radius: 15px; box-shadow: inset 0 0 50px rgba(255, 255, 255, 0.5); filter: grayscale(30%) contrast(120%); transition: filter 0.3s ease;">
            </div>

            <!-- Product Info Section -->
            <div style="flex-grow: 1; display: flex; flex-direction: column; gap: 20px; padding-left: 30px; padding-right: 30px; width: 350px; height: 500px; text-align: center;">

                <!-- Product Title -->
                <h1 style="font-size: 2.4rem; font-weight: bold; color: #333; margin: 0; letter-spacing: 1px; text-transform: uppercase; transition: color 0.3s ease;">
                    @GalleryImage.Name
                </h1>

                <!-- Product Description -->
                <p style="font-size: 1.1rem; color: #666; margin: 0; line-height: 1.7; letter-spacing: 0.5px; font-style: italic;">
                    @GalleryImage.Description
                </p>

                <!-- Product Stock and Price -->
                <div style="margin-top: 30px; display: flex; flex-direction: column; gap: 15px;">
                    <p style="font-size: 1.4rem; font-weight: bold; color: #444; margin: 0;">Views: @Views</p>
                    <h3 style="font-size: 1.2rem; color: #007bff; margin: 0; cursor: pointer; font-weight: 600; text-transform: capitalize;" @onclick="() => NavigateToProfile(Profile.ProfileId)">
                        By @Profile.Username
                    </h3>
                </div>

                
            </div>
        </div>
    </RadzenColumn>
</RadzenRow>

